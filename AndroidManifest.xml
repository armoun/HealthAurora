        	</activity> 
        	<activity android:name=".GamesActivity" 
                  android:label="@string/app_name" 
                  android:theme="@android:style/Theme.NoTitleBar"
                  android:screenOrientation="portrait" android:configChanges="orientation|keyboardHidden"> 
        	</activity>
